<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorQuestions">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/QuestionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tutorQuestionOne"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
                <!--android:paddingTop="5pt"
                android:paddingBottom="4pt"-->

            <CheckBox
                android:id="@+id/Q1Answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsOne" />

            <CheckBox
                android:id="@+id/Q1Answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsTwo" />

            <CheckBox
                android:id="@+id/Q1Answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsTre" />

            <CheckBox
                android:id="@+id/Q1Answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsFor" />

            <CheckBox
                android:id="@+id/Q1Answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsFiv" />

            <CheckBox
                android:id="@+id/Q1Answer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsSix" />

            <CheckBox
                android:id="@+id/Q1Answer7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsSvn" />

            <CheckBox
                android:id="@+id/Q1Answer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionOneAnsAte" />

            <TextView
                android:id="@+id/QuestionTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tutorQuestionTwo"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
                <!--android:paddingTop="8pt"
                android:paddingBottom="4pt"-->

            <CheckBox
                android:id="@+id/Q2Answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionTwoAnsOne" />

            <CheckBox
                android:id="@+id/Q2Answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionTwoAnsTwo" />

            <CheckBox
                android:id="@+id/Q2Answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionTwoAnsTre" />

            <CheckBox
                android:id="@+id/Q2Answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionTwoAnsFor" />

            <CheckBox
                android:id="@+id/Q2Answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/questionTwoAnsFiv" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>