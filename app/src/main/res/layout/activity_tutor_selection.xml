<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorSelection">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B5E8EC"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tutorSelectionTitle"
                android:text="@string/tutorSelectionTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_bigtext"
                android:gravity="center"
                android:paddingLeft="6sp"
                android:paddingTop="10sp"
                android:paddingRight="6sp"
                android:paddingBottom="10sp"
                android:textColor="#062C5B"
                android:textSize="36sp"
                app:fontFamily="sans-serif-light"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerv_view">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>